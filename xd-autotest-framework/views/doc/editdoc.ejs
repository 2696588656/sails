<!-- 添加jsoneditor -->
<script>
  var jsoneditors=new Array();

  for(var i=0;i<document.getElementById('APIs').childElementCount-1;i++){
    var container = document.getElementById('jsoneditor_queryParams_'+(i+1));

    var options = {
      mode: 'code',
      modes: ['code', 'form', 'text', 'tree', 'view'], // allowed modes
      onError: function (err) {
        alert(err.toString());
      },
      onModeChange: function (newMode, oldMode) {
        console.log('Mode switched from', oldMode, 'to', newMode);
      }
    };
    var json=JSON.parse($('div#jsoneditor_queryParams_'+(i+1)).attr('content'));

    var editor_temp = new JSONEditor(container, options, json);
    editor_temp.set(json);
    jsoneditors.push(editor_temp);

    console.log(editor_temp.getText());
  }
  console.log("end  jsoneditors.push(ALL);");
</script>


